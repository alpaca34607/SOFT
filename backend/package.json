{
  "name": "soft-bio-backend",
  "version": "1.0.0",
  "description": "軟筋生物預購系統後端 API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "init-db": "node -e \"require('./database-adapter').setupDatabase().then(()=>console.log('DB ready')).catch(console.error)\"",
    "migrate-add-columns": "node migrate-add-product-columns.js",
    "migrate-schema": "node -e \"const fs=require('fs');const path=require('path');const {db}=require('./database');const schema=fs.readFileSync(path.join(__dirname,'../database_schema.sql'),'utf8');db.exec(schema,(e)=>{if(e){console.error(e);process.exit(1)}else{console.log('schema applied');process.exit(0)}})\"",
    "migrate-images": "node migrate-existing-images.js",
    "build": "npm install",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.53.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "form-data": "^4.0.4",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "ecommerce",
    "preorder",
    "api",
    "soft-bio"
  ],
  "author": "Soft Bio Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/soft-bio-system.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/soft-bio-system/issues"
  },
  "homepage": "https://your-domain.com"
}
