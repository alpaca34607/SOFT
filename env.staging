# Staging Environment Configuration
NODE_ENV=staging
PORT=3000

# Database Configuration
# 使用 SQLite 作為 staging 環境的資料庫
DATABASE_TYPE=sqlite
DATABASE_PATH=./database-staging.sqlite

# API Configuration
API_BASE_URL=https://your-staging-domain.vercel.app
API_VERSION=v1

# Security
SESSION_SECRET=your-staging-session-secret
JWT_SECRET=your-staging-jwt-secret

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/staging.log

# Features
ENABLE_DEBUG=true
ENABLE_CORS=true
CORS_ORIGIN=*
